{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "dist/",
    "emitDeclarationOnly": true,
    "sourceMap": true
  },
  "include": [
    "env.d.ts",
    "index.ts",
    "customHooks/**/**/*.ts",
    "customHooks/**/*.ts",
    "components/**/**/*.d.ts",
    "components/**/**/*.ts",
    "components/**/**/*.tsx",
    "components/**/*.d.ts",
    "components/**/*.ts",
    "components/**/*.tsx"
  ],
  "exclude": ["node_modules/", "src/", "public/"]
}
