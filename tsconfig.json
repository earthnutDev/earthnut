{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "ESNext",
    "target": "ES2017",
    "lib": [
      "es5",
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    // "jsx": "react",
    "incremental": true,
    // "moduleResolution": "bundler",
    "moduleResolution": "node",
    "declaration": false,
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "esModuleInterop": true,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "dist/",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "page/*": [
        "src/page/*"
      ],
      "css/*": [
        "src/css/*"
      ],
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "index.client.ts",
    "index.server.ts",
    "env.d.ts",
    "dog.ts",
    "components/**/*.ts",
    "components/**/*.tsx",
    "components/**/*.d.ts",
    "customHooks/**/*.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "public/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "components/**/*.test.tsx",
    "components/**/*.test.ts"
  ]
}