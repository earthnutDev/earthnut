{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "page/*": ["src/page/*"],
      "css/*": ["src/css/*"]
    },
    "outDir": "dist/",
    "jsx": "react",
    "module": "ESNext",
    "target": "ES2015",
    "lib": ["es5", "dom"],
    "skipLibCheck": true,
    "moduleResolution": "node",
    "declaration": false,
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "esModuleInterop": true,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "index.ts",
    "env.d.ts",
    "dog.ts",
    "components/**/*.ts",
    "components/**/*.tsx",
    "components/**/*.d.ts",
    "customHooks/**/*.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "public/**/*.ts"
  ],
  "exclude": ["node_modules", "components/**/*.test.tsx", "components/**/*.test.ts"]
}
